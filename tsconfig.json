{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "types": [
      "node",
      "alpine-typescript"
    ],
    "typeRoots": [
      "/node_modules/@types",
      "/node_modules/@types/tailwindcss",
      "/node_modules/@types/alpinejs"
    ]
  },
  "include": [
    "**/*.ts", "server/pages/diachronicView.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}